@using VsixMvcAppResult.UI.Web.Common.Mvc.Html;
@using VsixMvcAppResult.UI.Web.Areas.Home.Models;
@using VsixMvcAppResult.Resources.General;
@model CultureSelectModel

@{Layout = "~/Views/Shared/_LayOut.cshtml";}

@section ScriptsToAdd
{
    <script type="text/javascript">
            (function ($) {
                jQuery(document).ready(function () {
                    VsixMvcAppResult.Widgets.Page.onInit(function () {
                        jQuery('#cultureSelectMenu').navMenu();
                    });
                });
            })(jQuery);
    </script>
}

@section InlineStyles{
    <style type="text/css">
        #cultureSelectMenu {border:0px solid transparent;}
    </style>
}

@{
    using (MvcForm form = Html.BeginWidgetForm())
    { 
        using (MvcWidgetBox boxSite = Html.BeginWidgetBox())
        {
            using (MvcWidgetBox divBoxHeader = Html.BeginWidgetBoxHeader())
            { 
                <text>
                    @GeneralTexts.CulturesAvailable
                </text>
            }
            using (MvcWidgetBox divBoxContent = Html.BeginWidgetBoxContent())
            {
                <text>
                    @this.Model.CulturesMenu.Render(new { id = "cultureSelectMenu" })
                </text>
            }
        }
    }
}
