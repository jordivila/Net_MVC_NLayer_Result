@using VsixMvcAppResult.UI.Web.Common.Mvc.Html;

@model VsixMvcAppResult.UI.Web.Models.baseViewModel

<!DOCTYPE html>
<html>
    <head>
        <title>@this.Model.BaseViewModelInfo.Title</title>
        @Html.PartialResourcesStylesheetsCommonRender()
        @RenderSection(HtmlHelperExtensions.SectionInlineStyles, true)
    </head>
    <body class="ui-widget-content">
        <div class="ui-sitePage ui-widget">

            @Html.PartialMenuTopNav()

            <div class="ui-site-title">
                <h1>Jordi Vila - @this.Model.BaseViewModelInfo.Title</h1>
            </div>
            
            @Html.PartialBreadcrumb()
            
            <div class="ui-siteContent ">
                <div class="ui-menuNav">
                    @Html.MenuGet().Render("treeList")
                </div>
                <div class="ui-siteContent-Container ">
                    @RenderBody()
                </div>
            </div>

            <div class="ui-siteFooter">
                <div class="ui-widget-header ui-corner-all">
                    <div>Copyright © 2012 Company Co. All rights reserved</div>
                    <div class="ui-siteFooter-html5Logo"></div>
                </div>
            </div>
            <br />
        </div>
        @Html.PartialResourcesScriptsCommonRender()
        @RenderSection(HtmlHelperExtensions.SectionScriptsToAdd, true)
        <script type="text/javascript">
            (function ($) {
                jQuery(document).ready(function () {
                    VsixMvcAppResult.Widgets.Page.selector = "body";
                    VsixMvcAppResult.Widgets.Page.cultureSelected = '@this.Model.BaseViewModelInfo.LocalizationResources.Culture';
                    VsixMvcAppResult.Widgets.Page.cultureGlobalization = "@this.Model.BaseViewModelInfo.LocalizationResources.CultureGlobalization";
                    VsixMvcAppResult.Widgets.Page.cultureDatePicker = "@this.Model.BaseViewModelInfo.LocalizationResources.CultureDatePicker";
                    VsixMvcAppResult.Widgets.Page.defaultTheme = "@this.Model.BaseViewModelInfo.UserProfile.Theme.Value";
                    VsixMvcAppResult.Widgets.Page.Init();
                });

                jQuery('#treeList').menu();

            })(jQuery);
        </script>
    </body>
</html>