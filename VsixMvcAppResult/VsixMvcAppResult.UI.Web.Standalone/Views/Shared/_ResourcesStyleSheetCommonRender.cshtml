@using VsixMvcAppResult.UI.Web.Common.Mvc.Html;
@using VsixMvcAppResult.UI.Web.Areas.UserAccount;
@using VsixMvcAppResult.UI.Web.Areas.Error;
@using VsixMvcAppResult.Models.Enumerations;
@using VsixMvcAppResult.UI.Web.Controllers;

@model VsixMvcAppResult.UI.Web.Models.baseViewModel

<link href="@this.Model.BaseViewModelInfo.UserProfile.Theme.Value.ToUri()" rel="Stylesheet" type="text/css" />
<link href="@Url.StylesheetDispatcher(ResourceDispatcherController.ResourceDispatchParamCommonKey, this.Model.BaseViewModelInfo) " rel="stylesheet" type="text/css"  />
<link href="@Url.StylesheetDispatcher(this.ViewContext.Controller.GetType().ToString(), this.Model.BaseViewModelInfo) " rel="stylesheet" type="text/css"  />
@{

    if (HttpContext.Current.Request.Browser.IsMobileDevice)
    {
        <text>
            <link href="@Url.Content("~/Content/Site.mobile.css")" rel="stylesheet" type="text/css"  />        
            <link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
            <style type="text/css">
                /* Allow Font Awesome Icons in lieu of jQuery UI and only apply when using a FA icon */
                .ui-icon[class*=" icon-"] {
                    /* Remove the jQuery UI Icon */
                    background: none repeat scroll 0 0 transparent;
                    /* Remove the jQuery UI Text Indent */
                    text-indent: 0;
                    /* Bump it up - jQuery UI is -8px */
                    margin-top: -0.5em;
                }

                .ui-button-icon-only .ui-icon[class*=" icon-"] {
                    /* Bump it - jQuery UI is -8px */
                    margin-left: -7px;
                }

                /* Allow use of icon-large to be properly aligned */
                .ui-icon.icon-large {
                    margin-top: -0.75em;
                }
            </style>
        </text>
    }
    else
    {
        if (HttpContext.Current.Request.Browser.Browser == "IE")
        {
            if (HttpContext.Current.Request.Browser.MajorVersion == 7)
            {
                //this.AppendFiles(new string[1] { "~/Content/SiteIE7.css" });
            }
        }
    }
}


